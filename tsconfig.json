{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
    ] 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
